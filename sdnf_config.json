{
  "EENF": {
    "tau": 0.01,
    "calibration_quantile": 0.95,
    "regenerations": 10,
    "_note": "EENF uses multiple regenerations per entity to estimate embedding variance."
  },
  "AANF": {
    "tau": 0.90,
    "calibration_quantile": 0.99,
    "require_ontology_match": true,
    "_note": "AANF requires high sim and ontology/evidence signals to declare aliases."
