  "DBNF": {
    "global_tau": 0.25,
    "calibration_quantile": 0.90,
    "adaptive_multiplier": 2.5,
    "min_alias_count": 3,
    "_note": "Per-attribute tau = max(global_tau, adaptive_multiplier * sqrt(variance))."
  },
  "ECNF": {
    "m_min": 3,
    "score_threshold": 0.60,
    "strong_score_threshold": 0.78,
    "require_distinct_signals": 2,
