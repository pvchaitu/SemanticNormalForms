  },
  "RRNF": {
    "tau": 0.70
  },
  "PONF": {
    "tau": 0.10
  },
  "decision_policy": {
    "dbnf_fail_fraction": 0.6,
    "dbnf_median_factor": 2.5,
    "auto_merge_min_score": 0.80,
    "auto_merge_min_count": 4,
    "canary_fraction": 0.05
  },
  "ontology": {
